<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ribboncafe.ribbon.com.ribboncafe.new_food_startup"
    android:background="@drawable/food2">

    <android.support.v7.widget.FitWindowsLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view"
        android:layout_above="@+id/view2"
        android:id="@+id/view3">

    </android.support.v7.widget.FitWindowsLinearLayout>

    <android.support.v7.widget.FitWindowsLinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view2">



        
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/lets_eat_logo"
            />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Order from Desk, Rate your snacks and get todays snacks notification"
            android:textStyle="italic"
            android:id="@+id/txt_about"
            />
    
        
    </android.support.v7.widget.FitWindowsLinearLayout>


    <android.support.v7.widget.FitWindowsLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/view">
        <info.hoang8f.widget.FButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_signin_1"
            android:text="Sign In"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:shadowColor="#000000"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"
            app:buttonColor="@color/btnsignup"
            />
        <info.hoang8f.widget.FButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_signup_1"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:shadowColor="#000000"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"
            app:buttonColor="@color/btnsignactive"
            />



    </android.support.v7.widget.FitWindowsLinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ribbon_logo1"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/view3"
        android:layout_alignEnd="@+id/view3" />


</RelativeLayout>
