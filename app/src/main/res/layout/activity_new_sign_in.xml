<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ribboncafe.ribbon.com.ribboncafe.new_sign_in"
    android:background="@drawable/food2">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ribbon_logo1"
        />
    
    <android.support.v7.widget.FitWindowsLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        >
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etext_email_1"
            android:hint="Email Address"
            android:textColorHint="#FFFFFF"
            android:text="rbbn.com"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:inputType="textEmailAddress"
            app:met_baseColor="#FFFFFF"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#FFFFFF"
            app:met_singleLineEllipsis="true"



            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etext_pass_1"
            android:hint="Password"
            android:textColorHint="#FFFFFF"
            android:text="@string/rbbn"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:inputType="textPassword"
            app:met_baseColor="#FFFFFF"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#FFFFFF"
            app:met_singleLineEllipsis="true"
            

            />



    </android.support.v7.widget.FitWindowsLinearLayout>


    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signin_2"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:layout_weight="1"
        android:shadowColor="#000000"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="4dp"
        app:buttonColor="@color/btnsignactive"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    
</RelativeLayout>
